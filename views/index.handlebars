<div class="container">
 <div class"row">
    <div class= 'col-xs-3'></div>
    <div class = 'col-xs-6'>
      <h2>What kind of burger do you want to eat?</h2>
      <form method="POST" action="/burgers/create" class="button-size">
        <textarea type="text" name="burger_name" placeholder="Enter your burger here"></textarea>
        <button type="submit" class='queue'>Add to Queue</button>
      </form>
    </div>
    <div class="col-xs-3"></div>
  </div>
</div>
<br>
<div class="container"> 
  <div class= "row">
    <div class= "col-xs-6">
      <ul>
        {{#each burger_data}}
          {{#unless this.devoured}}
          <li>
            <p>
              {{this.id}}. {{this.burger_name}}

              <form action="/burgers/update?_method=PUT" method="POST">
                <input type="hidden" name="id" value="{{this.id}}">
                <br>
                <button type="submit" class="eatMe">EAT ME!</button>
              </form>
            </p>
          </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class "col-xs-6">
      <ul>
        {{#each burger_data}}
          {{#if this.devoured}}
          <li>
            <p>
              {{this.id}}. {{this.burger_name}}
            </p>
          </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>